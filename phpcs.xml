<?xml version="1.0"?>
<ruleset name="Vanilla WP (PSR2)">
  <description>PHP Coding Standards based on PSR2</description>

  <!-- Use PSR-2 as a base -->
  <rule ref="PSR2"/>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Ignore WordPress and Composer dependencies -->
  <exclude-pattern>public/wp-content/plugins</exclude-pattern>
  <exclude-pattern>public/wp-content/mu-plugins</exclude-pattern>
  <exclude-pattern>vendor/</exclude-pattern>



</ruleset>